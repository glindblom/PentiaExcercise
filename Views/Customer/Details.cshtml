@model CustomerViewModel
@{
    Layout = "_Layout";
}

<div clas="row col-md-12">
    <h3>Customer details</h3>
    <hr />
    <div class="form-group">
        <label class="col-md-2">Name</label>
        <p class="col-md-10">@Model.Name</p>
    </div>

    <div class="form-group">
        <label class="col-md-2">Age</label>
        <p class="col-md-10">@Model.Age</p>
    </div>

    <div class="form-group">
        <label class="col-md-2">Address</label>
        <p class="col-md-10">@Model.Address</p>
    </div>

    <div class="form-group">
        <label class="col-md-2">Registered</label>
        <p class="col-md-10">@Model.Created.ToString("yyyy-MM-dd")</p>
    </div>
</div>

<div class="row col-md-12">
    <h4>Purchases</h4>
    <hr />
    <div>@Html.Partial("_CarPurchaseTable", Model.Purchases)</div>
</div>